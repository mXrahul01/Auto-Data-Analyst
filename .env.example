# Auto-Analyst Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# CORE APPLICATION SETTINGS  
# ===========================================
ENVIRONMENT=development
DEBUG=false
SECRET_KEY=your-secret-key-32-chars-minimum-change-this
JWT_SECRET_KEY=your-jwt-secret-key-32-chars-minimum-change-this
APP_NAME=Auto-Analyst Platform
APP_VERSION=2.0.0

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For local development (SQLite)
DATABASE_URL=sqlite:///./auto_analyst.db

# For Render deployment (PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database_name
# Use Render's internal database URL for production

# Individual components (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=auto_analyst_db

# ===========================================
# RENDER DEPLOYMENT SETTINGS
# ===========================================
PORT=8000
RENDER_INTERNAL_HOST=0.0.0.0
PYTHONPATH=/opt/render/project/src

# ===========================================
# REDIS & CACHING
# ===========================================
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHING=true
CACHE_TTL=3600

# ===========================================
# FILE STORAGE & UPLOADS
# ===========================================
UPLOAD_MAX_SIZE=21474836480
TEMP_DIRECTORY=/tmp
DATASETS_DIRECTORY=./datasets
MODELS_DIRECTORY=./models
CHUNK_SIZE=8388608

# ===========================================
# MACHINE LEARNING SETTINGS
# ===========================================
DEFAULT_ML_BACKEND=local
ENABLE_GPU=false
MAX_TRAINING_TIME=3600
DEFAULT_TEST_SIZE=0.2

# ===========================================
# REMOTE TRAINING PLATFORMS
# ===========================================
# Kaggle API credentials
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-api-key

# Google Colab (optional)
COLAB_NOTEBOOK_TEMPLATE=your-colab-template-url

# ===========================================
# MLOPS & MONITORING
# ===========================================
MLFLOW_TRACKING_URI=http://localhost:5000
ENABLE_MONITORING=true
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8001

# ===========================================
# EXTERNAL APIS & SERVICES
# ===========================================
# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
EMAIL_FROM=noreply@auto-analyst.com

# ===========================================
# SECURITY & CORS
# ===========================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://your-frontend-domain.com"]
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS","PATCH"]
CORS_HEADERS=["*"]

# ===========================================
# LOGGING & DEBUGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
AUTO_RELOAD=true
MOCK_EXTERNAL_SERVICES=false
PROFILING_ENABLED=false
