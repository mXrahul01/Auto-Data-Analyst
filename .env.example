# ================================
# AUTO DATA ANALYST ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ================================

# ================================
# CORE APPLICATION SETTINGS
# ================================

# Deployment environment (development, staging, production, testing)
ENVIRONMENT=development

# Application configuration
APP_NAME=Auto-Analyst
APP_VERSION=2.0.0
API_V1_STR=api/v1

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true
DEBUG=true

# ================================
# SECURITY SETTINGS
# ================================

# Secret key for JWT tokens and session encryption
# CRITICAL: Generate a new secure key for production!
SECRET_KEY=$w!#zQm&R0cZLrgwP&Oixgg1Yl3SZ2enfxYF3eu7ML1NkBkR6Qw8Lmp3$$pa6sDO

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=10080
REFRESH_TOKEN_EXPIRE_MINUTES=43200

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true

# ================================
# DATABASE CONFIGURATION
# ================================

# Primary database URL (overrides individual settings below)
# Examples:
#   PostgreSQL: postgresql://user:password@localhost:5432/autoanalyst
#   MySQL:      mysql+pymysql://user:password@localhost:3306/autoanalyst
#   SQLite:     sqlite:///./autoanalyst.db
DATABASE_URL=sqlite:///./autoanalyst.db

# Individual database connection settings (if DATABASE_URL not set)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_NAME=autoanalyst

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# ================================
# CACHE & REDIS CONFIGURATION
# ================================

# Cache backend (redis, memcached, memory)
CACHE_BACKEND=redis

# Redis connection (primary cache and job queue)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=false

# ================================
# CLOUD PROVIDER SETTINGS
# ================================

# Primary cloud provider (aws, gcp, azure, local)
CLOUD_PROVIDER=local

# AWS credentials
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# GCP credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-gcs-bucket-name

# Azure storage
AZURE_ACCOUNT=your-azure-storage-account
AZURE_CONTAINER=your-azure-container
AZURE_ACCOUNT_KEY=your-azure-account-key

# ================================
# MLFLOW CONFIGURATION
# ================================

# MLflow tracking server
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=auto-analyst-experiments
MLFLOW_ARTIFACT_ROOT=/path/to/mlflow/artifacts

# ================================
# ML & DATA PROCESSING SETTINGS
# ================================

# Compute backend for ML training (local, kaggle, colab)
DEFAULT_COMPUTE_BACKEND=local
ENABLE_REMOTE_TRAINING=true

# Dataset and processing limits
MAX_DATASET_SIZE_GB=20.0
MAX_TRAINING_TIME_HOURS=24
MAX_MODELS_PER_EXPERIMENT=50

# ================================
# FILE STORAGE DIRECTORIES
# ================================

# Data directories (relative to BASE_DIR)
UPLOAD_DIRECTORY=uploads
TEMP_DIRECTORY=temp
MODELS_DIRECTORY=models
ARTIFACTS_DIRECTORY=artifacts
DATASETS_DIRECTORY=datasets

# ================================
# EXTERNAL API INTEGRATIONS
# ================================

# Kaggle API (for remote execution)
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-api-key

# OpenAI API (for enhanced insights)
OPENAI_API_KEY=your-openai-api-key

# ================================
# CORS CONFIGURATION
# ================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_HEADERS=*

# ================================
# LOGGING CONFIGURATION
# ================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/autoanalyst.log

# ================================
# TESTING CONFIGURATION
# ================================

# Test-specific settings
TEST_DATABASE_URL=sqlite:///./test_autoanalyst.db
TEST_UPLOAD_DIR=./test_uploads
